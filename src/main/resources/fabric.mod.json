{
  "schemaVersion": 1,
  "id": "itemhighlighter",
  "version": "${version}",
  "name": "ItemHighlighter",
  "description": "A fabric mod which highlight items in the inventory for Hoplite.",
  "authors": [
    "yuko1101"
  ],
  "contact": {
    "website": "https://github.com/yuko1101/ItemHighlighter#readme",
    "repo": "https://github.com/yuko1101/ItemHighlighter"
  },
  "license": "All-Rights-Reserved",
  "icon": "assets/itemhighlighter/icon.png",
  "environment": "client",
  "entrypoints": {
    "client": [
      {
        "adapter": "kotlin",
        "value": "io.github.yuko1101.itemhighlighter.ItemHighlighter"
      }
    ]
  },
  "mixins": [
    "itemhighlighter.mixins.json"
  ],
  "depends": {
    "fabricloader": ">=${loader_version}",
    "fabric": "*",
    "minecraft": "${minecraft_version}",
    "fabric-language-kotlin": ">=1.10.15+kotlin.1.9.21"
  }
}
